{% extends 'form_div_layout.html.twig' %}

{% block choice_widget_expanded %}
    {% spaceless %}
        <ul class="twoColList colorCheck" {{ block('widget_container_attributes') }}>
            {% for child in form %}
                <li>
                    {{ form_widget(child) }}
                    {% set class = get_tag_color(child.vars.value) %}
                    {% if child.vars.checked %}
                        {% set class = class ~ " iChecked" %}
                    {% endif %}
                    {{ form_label( child, null, { "label_attr" : {"class" : class } } ) }}
                </li>
            {% endfor %}
        </ul>
    {% endspaceless %}
{% endblock choice_widget_expanded %}